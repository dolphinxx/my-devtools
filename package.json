{
  "name": "my-devtools",
  "private": true,
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "b": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.1.10",
    "@iconify-json/tabler": "^1.1.13",
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@types/clean-css": "^4.2.5",
    "@types/diff": "^5.0.2",
    "@types/js-beautify": "^1.13.3",
    "@types/minify": "^8.0.0",
    "@types/qrcode": "^1.4.2",
    "@types/terser": "^3.12.0",
    "@types/uglify-js": "^3.13.2",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitejs/plugin-vue": "2.2.2",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/test-utils": "2.0.0-rc.18",
    "cross-env": "7.0.3",
    "electron": "17.1.0",
    "electron-builder": "22.14.13",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.9.0",
    "eslint-plugin-vue": "8.5.0",
    "happy-dom": "2.41.0",
    "nano-staged": "0.6.0",
    "playwright": "1.19.1",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.5.5",
    "unocss": "^0.33.2",
    "unplugin-icons": "^0.14.3",
    "unplugin-vue-components": "^0.19.3",
    "vite": "2.8.4",
    "vitest": "0.5.4",
    "vue-tsc": "0.31.4"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@element-plus/icons-vue": "^1.1.4",
    "clean-css": "^5.3.0",
    "diff": "^5.0.0",
    "easymde": "^2.16.1",
    "electron-updater": "4.6.5",
    "element-plus": "^2.1.11",
    "file-type": "^17.1.1",
    "fs-extra": "^10.1.0",
    "highlight.js": "^11.5.1",
    "html-minifier": "^4.0.0",
    "html-minifier-terser": "^7.0.0-alpha.2",
    "js-beautify": "^1.14.3",
    "qr-scanner": "^1.4.1",
    "qrcode": "^1.5.0",
    "terser": "^5.13.1",
    "vue": "3.2.31",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.0.15",
    "vuex": "^4.0.2"
  }
}
